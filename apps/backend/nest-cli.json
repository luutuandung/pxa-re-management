{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "exec": "node dist/apps/backend/src/main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": ["**/*.!(ts)"],
    "watchAssets": true,
    "tsConfigPath": "tsconfig.dev.json"
  }
}
